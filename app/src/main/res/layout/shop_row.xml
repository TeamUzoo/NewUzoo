<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/petCardView"
            android:layout_width="118dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/box_shop">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPetId"
                    android:layout_width="64dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ani_rabbit" />

                <TextView
                    android:id="@+id/PetNameId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/neodgm"
                    android:gravity="center"
                    android:text="토끼"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/box_shop_money"
                android:drawableLeft="@drawable/icon_coin"
                android:drawablePadding="8dp"
                android:fontFamily="@font/neodgm"
                android:paddingLeft="18dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="600"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtSpecies"
                android:layout_width="86dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:background="@drawable/box_shop_money"
                android:drawablePadding="8dp"
                android:fontFamily="@font/neodgm"
                android:paddingLeft="18dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="600"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>